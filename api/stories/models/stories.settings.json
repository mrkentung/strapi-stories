{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "name": "stories"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "publish": {
      "type": "boolean"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "via": "story",
      "model": "categories"
    },
    "excerpt": {
      "type": "text"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "stories"
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
